@model Product
@{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @Model.Name
                <span class="rounded-pill badge bg-primary mt-4">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1"> @Model.Description </div>
    </div>
}
